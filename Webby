  <script>
    // -----------------------------
    // Simple JS helpers: navigation active state, mini-check, visitor counter, form
    // -----------------------------
    // Navigation
    document.querySelectorAll('nav a').forEach(a=>{
      a.addEventListener('click', ()=>{
        document.querySelectorAll('nav a').forEach(x=>x.classList.remove('active'));
        a.classList.add('active');
      })
    })

    // Visitor counter (local to browser) - useful for early testing
    (function(){
      try{
        let c = localStorage.getItem('th_vis')||0; c = Number(c)+1; localStorage.setItem('th_vis',c); document.getElementById('visCount').innerText = c;
      }catch(e){console.warn(e)}
    })();

    // Mini self-check
    function runCheck(){
      const q1 = document.getElementById('q1').value;
      const q2 = document.getElementById('q2').value;
      const out = document.getElementById('checkResult');
      let tip = '';
      if(q1 === '0') tip = 'Try 2 short sessions a week (10 min each). Start small.';
      else if(q1 === '1-2') tip = 'Good start — add one more 10–15 minute session this week.';
      else if(q1 === '3-4') tip = 'Solid routine. Focus on consistency and small progress.';
      else tip = 'Great job — maintain and gradually increase intensity.';
      if(q2 === 'yes') tip += ' Also check sleep and reduce late-night caffeine.';
      out.innerText = tip;
    }

    // Contact form (stores to localStorage for now)
    function submitForm(e){
      e.preventDefault();
      const name = document.getElementById('name').value || 'Anonymous';
      const msg = document.getElementById('message').value.trim();
      const el = document.getElementById('formMsg');
      if(!msg){ el.innerText='Please write a short message.'; return; }
      // store messages locally (replace with server or Google Form for real site)
      try{
        const existing = JSON.parse(localStorage.getItem('th_msgs')||'[]');
        existing.push({name, msg, time:new Date().toISOString()});
        localStorage.setItem('th_msgs', JSON.stringify(existing));
        el.innerText='Thanks! Your message was saved locally.';
        document.getElementById('message').value='';
      }catch(err){ el.innerText='Could not save message locally.' }
    }

    // Smooth scroll for hash links
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', function(e){
        const id = this.getAttribute('href');
        if(id.length>1){
          e.preventDefault(); document.querySelector(id).scrollIntoView({behavior:'smooth', block:'start'});
        }
      })
    })
  </script>
</body>
